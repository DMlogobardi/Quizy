<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZY"
        android:textColor="#CC0000"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/main_title"/>

    <TextView
        android:id="@+id/tv_titolo_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#########"
        android:background="#C0C0C0"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_titolo_quiz"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/question_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:padding="12dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/line_bottom">

        <TextView
            android:id="@+id/tv_numero_domanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_testo_domanda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="#############"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_numero_domanda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/answers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/question_bar">

        <TextView
            android:id="@+id/btn_risposta_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) ######"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_risposta_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2) ######"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btn_risposta_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3) ######"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nav_buttons_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_prev_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#D3D3D3"
        app:cardElevation="0dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nav_buttons_guideline">

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_previous"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="#000000"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precedente"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_prev_container"
        app:layout_constraintStart_toStartOf="@id/btn_prev_container"
        app:layout_constraintEnd_toEndOf="@id/btn_prev_container"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_next_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#D3D3D3"
        app:cardElevation="0dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nav_buttons_guideline">

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_media_next"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="#000000"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successiva"
        android:textSize="12sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next_container"
        app:layout_constraintStart_toStartOf="@id/btn_next_container"
        app:layout_constraintEnd_toEndOf="@id/btn_next_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>